<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list android:paddingStart="0dp" android:paddingEnd="0dp" android:paddingBottom="1dp">
            <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="0dp" android:color="@color/white_press" />
                    <padding android:left="3dp" android:right="3dp" />
                </shape>
            </item>
            <item android:gravity="bottom|center">
                <shape>
                    <solid android:color="@android:color/white" />
                    <stroke android:width="0dp" android:color="@color/white" />
                    <size android:height="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="0dp" android:color="@color/white_press" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="0dp" android:color="@color/white" />
        </shape>
    </item>

