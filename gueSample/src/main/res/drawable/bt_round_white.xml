<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient />
            <solid android:color="@color/white_press" />
            <stroke android:width="0dp" android:color="@color/transparent" />
            <corners android:radius="40dp" />
            <padding android:bottom="4dp" android:left="5dp" android:right="5dp" android:top="2dp" />
            <size android:width="50dp" android:height="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient />
            <solid android:color="@color/white" />
            <stroke android:width="0dp" android:color="@color/transparent" />
            <corners android:radius="40dp" />
            <padding android:bottom="4dp" android:left="5dp" android:right="5dp" android:top="2dp" />
            <size android:width="50dp" android:height="10dp" />
        </shape>
    </item>

</selector>