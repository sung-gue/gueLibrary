<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="@color/white" />
            <corners android:radius="32dp" />
            <padding android:bottom="6dp" android:left="15dp" android:right="15dp" android:top="6dp" />
            <!--<size android:width="57dp"
                android:height="32dp" />-->
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="@color/white_press" />
            <corners android:radius="32dp" />
            <padding android:bottom="6dp" android:left="15dp" android:right="15dp" android:top="6dp" />
            <!--<size android:width="57dp"
                android:height="32dp" />-->
        </shape>
    </item>


    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="0dp" android:color="@color/white" />
            <corners android:radius="32dp" />
            <padding android:bottom="6dp" android:left="15dp" android:right="15dp" android:top="6dp" />
            <!--<size android:width="57dp"
                android:height="32dp" />-->
        </shape>
    </item>

</selector>