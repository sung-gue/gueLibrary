<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        INFO: Custom Style
    -->

    <!-- INFO: Button -->
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Round.White" parent="Button">
        <item name="android:background">@drawable/bt_round_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.Square.White" parent="Button">
        <item name="android:background">@drawable/bt_square_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>


    <!-- INFO: shadow -->
    <style name="shadow1">
        <item name="android:shadowColor">#ff00ff00</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>


    <!-- INFO: progress dialog -->
    <style name="ProgressDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>