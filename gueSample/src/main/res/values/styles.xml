    <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="TopToolbar" parent="AppTheme.AppBarOverlay">
        <item name="android:background">#ffffffff</item>
        <item name="android:textColorPrimary">#ff6f6f6f</item>
        <item name="android:textColorPrimaryInverse">#99ffff00</item>
        <item name="android:textColorSecondary">#ff6f6f6f</item>
        <item name="android:textColorSecondaryInverse">#9900ffff</item>
        <item name="android:actionMenuTextColor">#ff0000ff</item>
    </style>

    <style name="TopToolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ff6f6f6f</item>
    </style>

    <style name="TabBar" parent="Widget.Design.TabLayout">
        <!--<item name="android:background">@color/color_g</item>-->
        <item name="tabMaxWidth">@dimen/design_tab_max_width</item>
        <item name="tabIndicatorColor">#ff2abb9c</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">#ff2abb9c</item>
        <item name="tabTextColor">#ffbdbdbd</item>
        <item name="tabTextAppearance">@style/TabBar.TitleText</item>
    </style>

    <style name="TabBar.TitleText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ff2abb9c</item>
        <item name="textAllCaps">true</item>
    </style>


    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton"/>


    <!-- base fonts -->
    <style name="text_base_small">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/small_font</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:includeFontPadding">false</item>
        <!-- <item name="android:textScaleX">0.9</item> -->
    </style>

    <style name="text_base_small_black" parent="@style/text_base_small">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/small_font</item>
    </style>

    <style name="text_base_meduim" parent="@style/text_base_small">
        <item name="android:textSize">@dimen/medium_font</item>
    </style>

    <style name="text_base_meduim_black" parent="@style/text_base_small">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/medium_font</item>
    </style>

    <style name="text_base_large" parent="@style/text_base_small">
        <item name="android:textSize">@dimen/large_font</item>
    </style>

    <style name="text_base_large_black" parent="@style/text_base_small">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/large_font</item>
    </style>

