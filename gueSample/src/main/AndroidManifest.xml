    <uses-permission android:name="android.permission.BROADCAST_STICKY" />


    <!-- INFO: usb -->
    <uses-feature android:name="android.hardware.usb.host" />


    <!-- INFO: TTS -->
    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
    </queries>


